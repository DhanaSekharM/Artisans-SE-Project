<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UserHomePage1Activity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/user_home_page1_abl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.v7.widget.Toolbar
                android:id="@+id/user_home_page1_tb"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/AppTheme.PopupOverlay">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/user_home_page1_spinner_search_choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:entries="@array/choice"
                        android:layout_gravity="center" />

                    <SearchView
                        android:id="@+id/user_home_page1_sv_search"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:iconifiedByDefault="false"
                        android:queryHint="Search Here"
                        android:layout_weight="1"
                        android:focusedByDefault="false" />

                </LinearLayout>

            </android.support.v7.widget.Toolbar>


        </android.support.design.widget.AppBarLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/user_home_page1_abl">
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hello"
                        android:textSize="40sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="40sp"
                        android:text="world"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="40sp"
                        android:text="this"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="40sp"
                        android:text="works"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="40sp"
                        android:text="for"
                        android:id="@+id/forr"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="40sp"
                        android:text="some"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="40sp"
                        android:text="reason"/>
                </LinearLayout>
            </HorizontalScrollView>

            <!--Home Page layout here-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/user_home_page1_ll_content"
                android:orientation="vertical">

                <!--Slideshow-->
                <View
                    android:layout_width="2dp"
                    android:layout_height="2dp"
                    android:layout_weight="1.0"
                    android:layout_margin="@dimen/spacing_medium"/>

                <!--Most Sold-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Best Sellers.."
                    android:textSize="18sp"/>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <android.support.v7.widget.RecyclerView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:reverseLayout="true"
                        android:id="@+id/user_home_page1_srv_most_sold">

                    </android.support.v7.widget.RecyclerView>
                </android.support.v7.widget.CardView>
                <View
                    android:layout_width="2dp"
                    android:layout_height="2dp"
                    android:layout_weight="1.0"
                    android:layout_margin="@dimen/spacing_medium"/>

                <!--Best Rated-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Most Loved.."
                    android:textSize="18sp"/>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <android.support.v7.widget.RecyclerView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:reverseLayout="true"
                        android:id="@+id/user_home_page1_srv_best_rated">

                    </android.support.v7.widget.RecyclerView>
                </android.support.v7.widget.CardView>
                <View
                    android:layout_width="2dp"
                    android:layout_height="2dp"
                    android:layout_weight="1.0" />

                <!--Recently Added-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recently Added.."
                    android:textSize="18sp"/>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <android.support.v7.widget.RecyclerView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:reverseLayout="true"
                        android:id="@+id/user_home_page1_srv_recently_added">

                    </android.support.v7.widget.RecyclerView>
                </android.support.v7.widget.CardView>
                <View
                    android:layout_width="2dp"
                    android:layout_height="2dp"
                    android:layout_weight="1.0" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/user_home_page1_ll_search"
                android:orientation="vertical">
                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/user_home_page1_srv_search">

                </android.support.v7.widget.RecyclerView>
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
</ScrollView>