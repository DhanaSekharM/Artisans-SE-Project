<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    android:id="@+id/user_home_page_dl">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/user_home_page_ll_outer">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/user_home_page_rl_1">

            <Spinner
                android:id="@+id/user_home_page_spinner_category"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="0.25"
                android:outlineSpotShadowColor="#FFFFFF"
                android:backgroundTint="#bebebe"
                android:backgroundTintMode="src_in"
                android:popupBackground="#bebebe"
                android:textAlignment="center"
                android:outlineAmbientShadowColor="#FFFFFF"
                android:entries="@array/searchFilter"
                >

            </Spinner>

            <EditText
                android:id="@+id/user_home_page_et_search_bar"
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:layout_weight="0.55"
                android:backgroundTint="#bebebe"
                android:backgroundTintMode="src_in"
                android:hint="Search here"

                android:textColorHint="#bebebe" />

            <ImageButton
                android:id="@+id/user_home_page_ibutton_search"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_weight="0.15"
                android:onClick="Search_button_user_home_page"
                android:src="@drawable/ic_search_black" />
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp"
            android:paddingBottom="4dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:id="@+id/user_home_page_ll_inner_1">

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:cardBackgroundColor="#F5FFFA"
                app:cardCornerRadius="7sp"
                android:paddingStart="2dp"
                android:paddingEnd="2dp"
                android:layout_marginRight="4dp"
                android:onClick="bracelets"
                android:id="@+id/user_home_page_cv_bracelet"
                >

                <RelativeLayout
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/user_home_page_rl_bracelet">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Bracelet"
                        android:gravity="center"
                        android:textSize="25sp"
                        android:id="@+id/user_home_page_tv_bracelet"
                        android:layout_below="@id/user_home_page_iv_bracelet"
                        />

                    <ImageView
                        android:id="@+id/user_home_page_iv_bracelet"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_launcher_bracelets1_round"/>

                </RelativeLayout>


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:cardBackgroundColor="#F5FFFA"
                app:cardCornerRadius="7sp"
                android:onClick="Saree"
                android:id="@+id/user_home_page_cv_saree"
                android:padding="2dp"
                android:layout_marginLeft="4dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Saree"
                        android:gravity="center"
                        android:textSize="25sp"
                        android:id="@+id/user_home_page_tv_saree"
                        android:layout_below="@id/user_home_page_iv_saree"
                        />

                    <ImageView
                        android:id="@+id/user_home_page_iv_saree"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_launcher_sarees_round"/>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/user_home_page_ll_inner_2"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp">

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/user_home_page_cv_dhoti"
                app:cardBackgroundColor="#F5FFFA"
                app:cardCornerRadius="7sp"
                android:layout_marginRight="4dp"
                android:onClick="Dhoti">

                <RelativeLayout
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/user_home_page_rl_dhoti">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Dhoti"
                        android:gravity="center"
                        android:textSize="25sp"
                        android:layout_below="@id/user_home_page_iv_dhoti"
                        android:id="@+id/user_home_page_tv_dhoti"
                        />

                    <ImageView
                        android:id="@+id/user_home_page_iv_dhoti"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_launcher_dhoti_round"/>

                </RelativeLayout>


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:cardBackgroundColor="#F5FFFA"
                app:cardCornerRadius="7sp"
                android:layout_marginLeft="4dp"
                android:onClick="Garland"
                android:id="@+id/user_home_page_cv_garland">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:id="@+id/user_home_page_rl_garland">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Garland"
                        android:gravity="center"
                        android:textSize="25sp"
                        android:layout_below="@id/user_home_page_iv_garland"
                        android:id="@+id/user_home_page_tv_garland"
                        />

                    <ImageView
                        android:id="@+id/user_home_page_iv_garland"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_launcher_garlands_round"/>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:id="@+id/user_home_page_ll_inner_3">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:cardBackgroundColor="#F5FFFA"
                app:cardCornerRadius="7sp"
                android:onClick="Pottery"
                android:layout_marginRight="4dp"
                android:id="@+id/user_home_page_cv_pottery">

                <RelativeLayout
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/user_home_page_rl_pottery">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pottery"
                        android:gravity="center"
                        android:textSize="25sp"
                        android:layout_below="@id/user_home_page_iv_pottery"
                        android:id="@+id/user_home_page_tv_pottery"
                        />

                    <ImageView
                        android:id="@+id/user_home_page_iv_pottery"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_launcher_pottery_round"/>

                </RelativeLayout>


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:cardBackgroundColor="#F5FFFA"
                app:cardCornerRadius="7sp"
                android:onClick="Glass_painting"
                android:layout_marginLeft="4dp"
                android:id="@+id/user_home_page_cv_glass_painting">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:id="@+id/user_home_page_rl_glass_painting">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Glass painting"
                        android:gravity="center"
                        android:textSize="25sp"
                        android:id="@+id/user_home_page_tv_glass_painting"
                        android:layout_below="@id/user_home_page_iv_glass_painting"
                        />

                    <ImageView
                        android:id="@+id/user_home_page_iv_glass_painting"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_launcher_glass_painting_round"/>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="4dp"
            android:paddingBottom="8dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:id="@+id/user_home_page_ll_inner_4">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:cardBackgroundColor="#F5FFFA"
                app:cardCornerRadius="5sp"
                android:onClick="Shirt"
                android:layout_marginRight="4dp"
                android:id="@+id/user_home_page_cv_shirt">

                <RelativeLayout
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/user_home_page_rl_shirt">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Shirt"
                        android:gravity="center"
                        android:textSize="25sp"
                        android:layout_below="@id/user_home_page_iv_shirt"
                        android:id="@+id/user_home_page_tv_shirt"
                        />

                    <ImageView
                        android:id="@+id/user_home_page_iv_shirt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_launcher_shirts_round"/>

                </RelativeLayout>


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:cardBackgroundColor="#F5FFFA"
                app:cardCornerRadius="5sp"
                android:onClick="Toys"
                android:layout_marginLeft="4dp"
                android:id="@+id/user_home_page_cv_toy">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:id="@+id/user_home_page_rl_toy">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Toy"
                        android:gravity="center"
                        android:textSize="25sp"
                        android:layout_below="@id/user_home_page_iv_toy"
                        android:id="@+id/user_home_page_tv_toy"
                        />

                    <ImageView
                        android:id="@+id/user_home_page_iv_toy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_launcher_toy_round"/>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </LinearLayout>


    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/user_home_page_navigation_view"
        android:layout_gravity="start"
        app:headerLayout="@layout/user_home_page_navigation_header"
        app:menu="@menu/user_home_page_navigation_menu"></android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>
